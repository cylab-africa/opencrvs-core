{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "src",
    "lib": [
      "dom",
      "dom.iterable",
      "WebWorker",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["fhir", "vitest/globals"],
    "noEmit": true,
    "jsx": "react",
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "typings",
    "codegen.ts",
    "vite.config.ts",
    "vite.rtl-config.ts",
    "__mocks__"
  ],
  "extends": "./tsconfig.paths.json"
}
